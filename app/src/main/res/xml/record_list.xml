<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <RelativeLayout 
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/record_list_marginTop"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_marginLeft="@dimen/record_list_margin"/>

        <TextView
            android:id="@+id/textMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/record_list_marginTop"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_marginRight="@dimen/record_list_margin"/>

        <TextView
            android:id="@+id/textTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textName"
            android:layout_alignParentLeft="true"
            android:singleLine="true"
            android:layout_marginTop="@dimen/record_list_time_margin"
            android:layout_marginBottom="@dimen/record_list_time_margin"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginLeft="@dimen/record_list_margin"/>

    </RelativeLayout>

</LinearLayout>
